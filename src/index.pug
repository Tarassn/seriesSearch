doctype html
html(lang="ru")
    include templates/head
    include templates/header
    body
        div.wrapper
            div.main
                div.title-container
                    h2.title-container__title Find your perfect series
                    ul#seriesList
                div.form-container
                    input(type='text', placeholder='Enter series name' id="mainInput" value="")
                    div
                        span Filter by rating:
                        select#ratingFilter(name='country')
                            option(value='1') 1+
                            option(value='2') 2+
                            option(value='3') 3+
                            option(value='4') 4+
                            option(value='5') 5+
                            option(value='6') 6+
                            option(value='7') 7+
                            option(value='8') 8+
                            option(value='9') 9+
        include templates/footer
